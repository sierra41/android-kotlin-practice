<?xml version="1.0" encoding="utf-8"?>
<!--
모양변경 selector > shape

    android:shape="rectangle : 사각

-->

<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <solid android:color="#18D9EC"/>
    <!--android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp" -->
    <corners
        android:radius="30dp" />
    <size
        android:height="70dp"
        android:width="200dp" />
    <stroke android:width="3dp"
            android:color="#1D69C5"
            android:dashWidth="20dp"
            android:dashGap="3dp"        />
    <padding android:bottom="20dp" />
    <gradient
        android:startColor="@color/teal_200"
        android:centerColor="@color/purple_200"
        android:endColor="@color/testAddColoer"
        android:angle="405"

        android:gradientRadius="300dp"
        android:centerX="0.5"
        android:centerY="0.5"
        android:type="sweep"
        />
        <!--
        centerX : 0 왼쪽, 1: 오른쪽, 0.5 : 중간
        gradientRadius : gradient의 반지름 길이. radial에 영향을 줌
        type="radial" 을 사용하면 angle은 필요없음

        -->
</shape>